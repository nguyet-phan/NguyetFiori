<mvc:View controllerName="nguyetfiori.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    >
    <Page id="page" title="{i18n>title}">
        <content>
            <smartTable:SmartTable id="smartTable" entitySet="EmployeeSet" tableType="ResponsiveTable" 
                useVariantManagement="false" useExportToExcel="false" header="Products" showRowCount="true" 
                persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true" smartFilterId="smartFilterBar" 
                initiallyVisibleFields="Id,Depart,Name,Address,Phonenum,Pos" >
                <Table id="idTable" mode="MultiSelect">
                    <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                            <Button text="Create" press="onCreate" type="Emphasized"/>
                            <Button text="Update" press="onUpdate" type="Emphasized"/>
                            <Button class="sapUiSmallMarginBeginEnd" type="Reject" icon="sap-icon://delete" 
                            text="Delete" press="onDelete"/>

                    </OverflowToolbar>
                </headerToolbar>
                </Table>
            </smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>
